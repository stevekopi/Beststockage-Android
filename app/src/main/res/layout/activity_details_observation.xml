<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        app:srcCompat="@drawable/ic_image_dollard"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgrounLayoutOrange1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_details_rapport_caisse_agence"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorBackgrounLayoutOrange2"
            android:gravity="center"
            android:text="Aucune donnée"
            android:textColor="@color/colorBackgrounLayoutBlanc1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_details_rapport_caisse_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Aucune donnée"
            android:textColor="@color/colorBackgrounLayoutBlanc1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lv_details_rapport_caisse"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
</LinearLayout>