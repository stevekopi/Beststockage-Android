<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFullBackGroundFragment"
    android:orientation="vertical"
    tools:context=".layout.Stocks.CommandeView">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/tv_facture_row_third_article_description"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:textColor="@color/colorBackgrounLayoutNoir1"
               android:text="TextView" />

           <TextView
               android:id="@+id/tv_facture_row_third_quantite"
               android:layout_width="60dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:paddingLeft="5dp"
               android:text="TextView" />
           <TextView
               android:id="@+id/tv_facture_row_third_bonus"
               android:layout_width="50dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:paddingLeft="5dp"
               android:text="TextView" />
           <TextView
               android:id="@+id/tv_facture_row_third_montant_net"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:layout_marginEnd="5dp"
               android:elevation="1dp"
               android:gravity="end"
               android:text="TextView"
               android:textStyle="bold" />
       </LinearLayout>
    </LinearLayout>
</LinearLayout>


