<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_devise"
            android:layout_width="61dp"
            android:layout_height="73dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/ic_devise" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">
           <LinearLayout
               android:id="@+id/ll_devise_block_2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/tv_cell_devise_designation"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="10dp"
                   android:paddingBottom="1dp"
                   android:textSize="14sp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/tv_cell_devise_description"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   android:paddingLeft="10dp" />
               <TextView
                   android:id="@+id/tv_cell_devise_code"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   android:paddingLeft="10dp"
                   android:layout_marginBottom="5dp"
                   />

               <TextView
                   android:id="@+id/tv_cell_devise_symbole"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   android:paddingLeft="10dp"
                   android:layout_marginBottom="5dp"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="20dp"
               android:layout_height="match_parent"
               android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_cell_devise_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="D"/>
               <TextView
                   android:id="@+id/tv_cell_devise_local"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   android:textSize="15dp"
                   android:text="L"/>
               <TextView
                   android:id="@+id/tv_cell_devise_default_converter"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   android:textSize="15dp"
                   android:text="C"/>
           </LinearLayout>
       </LinearLayout>

    </LinearLayout>

</LinearLayout>