<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorFullBackGroundFragment"
    tools:context=".layout.Parametres.ArticleProduitFactureView">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <androidx.appcompat.widget.SearchView
          android:id="@+id/sv_article_produit_facture_filter"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
       <include layout="@layout/loadingprogress"
           android:id="@+id/pb_article_produit_facture_loading"
           android:layout_height="25dp"
           android:layout_width="25dp"
           android:layout_gravity="center_horizontal"/>

       <TextView
           android:id="@+id/tv_article_produit_facture_count"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center"
           android:text="Erreur" />
   </LinearLayout>


  <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
      android:id="@+id/refresh_article_produit_facture"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <ExpandableListView
          android:id="@+id/elv_article_produit_facture"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:addStatesFromChildren="false"
          android:animateLayoutChanges="true"
          android:choiceMode="multipleChoiceModal"
          android:drawSelectorOnTop="false"
          android:headerDividersEnabled="false"
          android:orientation="vertical"

          >

      </ExpandableListView>

  </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
