<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <ImageView
               android:id="@+id/iv_fournisseur"
               android:layout_width="57dp"
               android:layout_height="73dp"
               app:srcCompat="@drawable/ic_menu_fournisseur" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="500dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/tv_nom_fournisseur"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="10dp"
                   android:text="Nom fournisseur"
                   android:textSize="14sp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/tv_fournisseur_tel"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingBottom="5dp"
                   android:paddingLeft="10dp"
                   android:text="N° Telephone" />
               <TextView
                   android:id="@+id/tv_fournisseur_tel_2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingBottom="5dp"
                   android:paddingLeft="10dp"
                   android:text="." />
               <TextView
                   android:id="@+id/tv_fournisseur_tel_3"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingBottom="5dp"
                   android:paddingLeft="10dp"
                   android:text="." />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/tv_adding_date_user"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="right"
                   android:padding="10dp"
                   android:text="Ajouté depuis :"
                   android:textSize="11sp"
                   android:textStyle="normal" />
           </LinearLayout>

       </LinearLayout>

   </LinearLayout>
</LinearLayout>