<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:backgroundTint="#FFFFFF"
    tools:context=".layout.AboutView">

    <ImageView
        android:background="@drawable/ic_devise"
        android:layout_gravity="center"
        android:layout_height="200dp"
        android:layout_width="400dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_details_devise_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_details_devise_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#0000FF"/>
        <TextView
            android:id="@+id/tv_details_devise_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#FF6F00"/>

        <ListView
            android:id="@+id/lv_details_devise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"
            />


    </LinearLayout>

</LinearLayout>
